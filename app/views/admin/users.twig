{% extends "admin.twig" %}

{% block content %}

<h1>Liste des utilisateurs</h1>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Rank</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for user in users %}
    <tr>
      <td>{{ user.id }}</td>
      <td>{{ user.email }}</td>
      <td>{{ user.name }}</td>
      <td></td>
    </tr>
  {% else %}
    <tr>
      <td colspan="4">Pas d'utilisateur pour le moment.</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}
