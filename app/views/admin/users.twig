{% extends "admin.twig" %}

{% block content %}

<h1>Liste des utilisateurs</h1>

<a href="{{ path_for('add_user') }}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un utilisateur</a>
<br><br>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Rank</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for user in users %}
    <tr>
      <td>{{ user.id }}</td>
      <td>{{ user.email }}</td>
      <td>{{ user.name }}</td>
      <td>
        <a href="{{ path_for('edit_user', {'id': user.id}) }}" class="btn btn-warning"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></a>
        <a href="{{ path_for('del_user', {'id': user.id}) }}" class="btn btn-danger" onclick="return confirm('ÃŠtes vous sur ?');"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
      </tr>
  {% else %}
    <tr>
      <td colspan="4">Pas d'utilisateur pour le moment.</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}
