{% extends "layout.twig" %}

{% block content %}

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>Modifier mon compte</h2>
    <form class="form-group" action="" method="post">
        <label class="control-label" for="email">Adresse email :</label>
        <input class="form-control" type="email" name="email" value="{{ auth.email }}" id="email">
        <br>

        <label class="control-label" for="password">Nouveau mot de passe :</label>
        <input class="form-control" type="password" name="password" id="password">
        <br>
        <label class="control-label" for="password_confirm">Confirmer le mot de passe :</label>
        <input class="form-control" type="password" name="password_confirm" id="password_confirm">

        <br>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk"></span> Enregistrer</button>
    </form>
  </div>
</div>

{% endblock %}
