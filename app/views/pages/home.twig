{% extends "layout.twig" %}

{% block content %}

<h1>Mon répertoire</h1>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Fichier</th>
      <th>Taille</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for file in files %}
    <tr>
      <td>{{ file.name }}</td>
      <td>{{ file.weight }}</td>
      <td>

        <a href="{{ path_for('del_file', {'id': file.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes vous sur de supprimer le fichier {{ file.name }} ?');"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
      </td>
    </tr>
  {% else %}
    <tr>
      <td colspan="3">Vous n'avez aucun fichier pour le moment.</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}
