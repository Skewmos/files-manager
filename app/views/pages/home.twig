{% extends "layout.twig" %}

{% block content %}

<h1>Mon répertoire</h1>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Fichier</th>
      <th>Taille</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for file in files %}
    <tr>
      <td>{{ file.name }}</td>
      <td>{{ file.weight }}</td>
      <td>
        <div class="btn-group">
          <a href="#" class="btn btn-success"><span class="glyphicon glyphicon-save"></span> Télécharger</a><a href="#" class="btn btn-success dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#"><span class="glyphicon glyphicon-film"></span> Regarder en streaming</a></li>
          </ul>
        </div>

        <a href="{{ path_for('del_file', {'id': file.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes vous sûr de supprimer le fichier {{ file.name }} ?');"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
      </td>
    </tr>
  {% else %}
    <tr>
      <td colspan="3">Vous n'avez aucun fichier pour le moment.</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}
